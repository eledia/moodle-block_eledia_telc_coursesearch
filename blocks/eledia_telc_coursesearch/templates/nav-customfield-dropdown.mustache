{{!
    @template block_eledia_telc_coursesearch/nav-category-dropdown

    This template renders grouping dropdown.

    Example context (json):
    "categories" : {
        [
            {
                "id": 1,
                "name": "categoryname"
            }
        ]
    },
    "catselections" : {
        [
            {
                "id": 1,
                "name": "categoryname"
            }
        ]
    }
}}
<ul class="dropdown-menu dropdown-customfields-{{customfieldid}} dropdown-menu-customfields customprevent" role="menu" data-show-active-item data-skip-active-class="true" data-active-item-text aria-labelledby="groupingdropdown">
	{{#description}}
    <li class="dropdown-description">
			<div>{{#pix}}i/info, core{{/pix}}</div><div>{{{description}}}</div>
    </li>
	{{/description}}
    <li class="dropdown-divider" role="presentation">
        <span class="filler">&nbsp;</span>
    </li>
    {{^customselections}}
    <li>
        <a class="dropdown-item customprevent customfield-no" href="#" data-customfieldid="{{customfieldid}}"
           role="menuitem" >
            {{#str}} nocatselected, block_eledia_telc_coursesearch {{/str}}
        </a>
    </li>
    {{/customselections}}
    {{#customselections}}
    <li>
        <a class="dropdown-item customprevent customfield-selected" href="#" data-customfieldid="{{customfieldid}}"
		   data-selectvalue="{{value}}"
		   data-selectname="{{name}}"
           role="menuitem" >
            {{name}}
        </a>
    </li>
    {{/customselections}}
    <li class="dropdown-divider" role="presentation">
        <span class="filler">&nbsp;</span>
    </li>
    {{^customvalues}}
    <li>
        <a class="dropdown-item customprevent customfield-no" href="#" data-customfieldid="{{customfieldid}}"
           role="menuitem" >
            {{#str}} nocatavailable, block_eledia_telc_coursesearch {{/str}}
        </a>
    </li>
    {{/customvalues}}
    {{#customvalues}}
    <li>
        <a class="dropdown-item customprevent customfield-selectable" href="#" data-customfieldid="{{customfieldid}}"
		   data-selectvalue="{{value}}"
		   data-selectname="{{name}}"
           role="menuitem" >
            {{name}}
        </a>
    </li>
    {{/customvalues}}
</ul>
