{{!
    @template block_eledia_telc_coursesearch/nav-customfield-dropdown

    This template renders grouping dropdown.

    Example context (json):
    "customfieldsselected" : {
        [
            {
                "customfieldid": 1,
                "id": 1,
                "name": "customfieldvalue"
            }
        ]
    },
    "customfieldsselectables" : {
        [
            {
                "customfieldid": 1,
                "id": 2,
                "name": "customfieldvalue"
            }
        ]
    }
}}

    <li class="dropdown-divider" role="presentation">
        <span class="filler">&nbsp;</span>
    </li>
    {{^customfieldsselected}}
        <li>
            <a class="dropdown-item catprevent customfield-no" href="#"
               aria-label="{{#str}}aria:customfield, block_eledia_telc_coursesearch, {{name}}{{/str}}">
                {{#str}} noitemsselected, block_eledia_telc_coursesearch {{/str}}
            </a>
        </li>
    {{/customfieldsselected}}
    {{#customfieldsselected}}
        <li>
            <a class="dropdown-item catprevent customfield-no" href="#" data-id="{{id}"
               aria-label="{{#str}}removeallitems, block_eledia_telc_coursesearch, {{name}}{{/str}}">
                {{#str}} removeallitems, block_eledia_telc_coursesearch {{/str}}
            </a>
        </li>
        <li>
            <a class="dropdown-item customfield-item" href="#"
               data-value="customfield" data-pref="customfield" data-id="{{id}" data-customfield-id="{{customfieldid}"
               aria-label="{{#str}}aria:customfield, block_eledia_telc_coursesearch, {{name}}{{/str}}"
               aria-controls="courses-view-{{uniqid}}" role="menuitem" {{#active}}aria-current="true"{{/active}}>
                {{name}}
            </a>
        </li>
    {{/customfieldsselected}}
    <li class="dropdown-divider" role="presentation">
        <span class="filler">&nbsp;</span>
    </li>
    {{^customfieldsselectables}}
        <li>
            <a class="dropdown-item catprevent customfield-no" href="#"
               aria-label="{{#str}}aria:customfield, block_eledia_telc_coursesearch, {{name}}{{/str}}">
                {{#str}} noitemsavailable, block_eledia_telc_coursesearch {{/str}}
            </a>
        </li>
    {{/customfieldsselectables}}
    {{#customfieldsselectables}}
        <li>
            <a class="dropdown-item customfield-item" href="#" data-id="{{id}" data-customfield-id="{{customfieldid}"
               data-value="customfield" data-pref="customfield" data-customfieldvalue="{{value}}"
               aria-label="{{#str}}aria:customfield, block_eledia_telc_coursesearch, {{name}}{{/str}}"
               aria-controls="courses-view-{{uniqid}}" role="menuitem" {{#active}}aria-current="true"{{/active}}>
                {{name}}
            </a>
        </li>
    {{/customfieldsselectables}}
