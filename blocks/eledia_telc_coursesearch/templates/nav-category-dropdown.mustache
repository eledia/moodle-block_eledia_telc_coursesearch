{{!
    @template block_eledia_telc_coursesearch/nav-category-dropdown

    This template renders grouping dropdown.

    Example context (json):
    "categories" : {
        [
            {
                "id": 1,
                "name": "categoryname"
            }
        ]
    }
}}
<ul class="dropdown-menu dropdown-categories catprevent" role="menu" data-show-active-item data-skip-active-class="true" data-active-item-text aria-labelledby="groupingdropdown">
    <li class="dropdown-divider" role="presentation">
        <span class="filler">&nbsp;</span>
    </li>
    <li>
        <a class="dropdown-item catprevent" href="#" data-filter="grouping" data-value="all" data-pref="all" aria-label="{{#str}} aria:allcourses, block_eledia_telc_coursesearch {{/str}}" aria-controls="courses-view-{{uniqid}}" role="menuitem" {{#all}}aria-current="true"{{/all}}>
            {{#str}} all, block_eledia_telc_coursesearch {{/str}}
        </a>
    </li>
    {{! Customfield start }}
        <li class="dropdown-divider" role="presentation">
            <span class="filler">&nbsp;</span>
        </li>
        {{#categories}}
            <li>
                <a class="dropdown-item catprevent" href="#" data-cat-id="{{id}}"
                   role="menuitem" >
                    {{name}}
                </a>
            </li>
        {{/categories}}
    {{! Customfield end }}
</ul>
